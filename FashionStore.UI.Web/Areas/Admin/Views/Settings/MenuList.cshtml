@model List<FashionStore.Entity.Entities.AdminMenuBar>

@{
    ViewBag.Title = "Admin Menu Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles
{
    <link href="~/AdminTemplate/plugins/bower_components/footable/css/footable.core.css" rel="stylesheet">
    <link href="~/AdminTemplate/plugins/bower_components/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Admin Menü Yönetimi</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="/Admin/Home">Dashboard</a></li>
                <li class="active">Admin Menü Yönetimi</li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- .row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="white-box">
                <h2 class="box-title m-b-0">Admin Menü Listesi</h2>
                @Html.Partial("_PartialValidationResult")
                <hr />
                <table id="demo-foo-addrow" class="table table-bordered table-hover toggle-circle" data-page-size="15">
                    <thead>
                        <tr>
                            <th  data-toggle="true">Menu Adı</th>
                            <th data-hide="phone, tablet">Görüntülenme Sırası</th>
                            <th data-hide="phone, tablet">Adresi</th>
                            <th data-hide="phone, tablet">İkon</th>
                            <th data-sort-ignore="true" class="min-width" style="text-align: center;">İşlem</th>
                        </tr>
                    </thead>
                    <div class="form-inline padding-bottom-15">
                        <div class="row">
                            <div class="col-sm-6 text-left m-b-20">
                                <div class="form-group">
                                    <input id="demo-input-search2" type="text" placeholder="Arama..." class="form-control" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-sm-6 text-right">
                                <a href="/Admin/Settings/MenuAdd" class="btn btn-info waves-effect waves-light" type="button"><span class="btn-label"><i class="fa fa-plus-square"></i></span>Menu Ekle</a>
                            </div>

                        </div>
                    </div>
                    <tbody>
                        @foreach (var menu in Model)
                        {
                            <tr>
                                @if (menu.ParentSidebarId == null)
                                {
                                    <td>@menu.Name</td>
                                }
                                else
                                {
                                    <td>@menu.ParentSidebar.Name >> @menu.Name</td>
                                }
                                <td>@menu.DisplayOrder</td>
                                <td>@menu.ControllerActionName</td>
                                <td style="text-align: center;"><i data-icon="@menu.DataIcon" class="@menu.IconPath"></i></td>
                                <td style="text-align: center;">
                                    <a href="/Admin/Settings/MenuEdit/@menu.Id" class="btn btn-primary btn-rounded waves-effect waves-light btn-sm" type="button"><span class="btn-label"><i class="fa fa-edit"></i></span>Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5">
                                <div class="text-right">
                                    <ul class="pagination"></ul>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>


@section scripts
{
    <!-- Footable -->
    <script src="~/AdminTemplate/plugins/bower_components/footable/js/footable.all.min.js"></script>
    <script src="~/AdminTemplate/plugins/bower_components/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
    <!--FooTable init-->
    <script src="~/AdminTemplate/js/footable-init.js"></script>
}

