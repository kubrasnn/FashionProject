@model FashionStore.Entity.Entities.Message

@{
    ViewBag.Title = "Mesaj Detay | Elsa Giyim";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Gelen Kutusu - Mesaj Detay</h4>

        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="/Admin/Home">Dashboard</a></li>
                <li><a href="/Admin/Settings/List">Mesaj Yönetimi</a></li>
                <li class="active">Mesaj Detay</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading"> Mesaj Bilgileri</div>
                <div class="panel-wrapper collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <div class="form-body">
                            <h3 class="box-title">Mesaj</h3>
                            @Html.Partial("_PartialValidationResult")
                            <hr class="m-t-0 m-b-40">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Mesaj Gönderen Ad:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static"> @Model.Name </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Gönderilme Tarihi:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static"> @Model.CreatedTime </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Konu:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static"> @Model.Subject </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Mesaj:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static"> @Model.Comment </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Mesaja Verilen Cevap:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static"> @Model.AdminAnswer </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Mesaj Okunma Durumu:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static"> @Model.IsReaded </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Mesaj Gönderen Maili:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static"> @Model.Mail </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <br />
                            @using (Html.BeginForm("SendAnswer", "Settings", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(x => x.Id)
                                @Html.HiddenFor(x => x.Name)
                                @Html.HiddenFor(x => x.Mail)
                                @Html.HiddenFor(x => x.Subject)
                                @Html.HiddenFor(x => x.Comment)
                                @Html.HiddenFor(x => x.CreatedTime)
                                @Html.HiddenFor(x => x.IsReaded)
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Yanıtla:</label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(x => x.AdminAnswer, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-success">Cevapla</button>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


