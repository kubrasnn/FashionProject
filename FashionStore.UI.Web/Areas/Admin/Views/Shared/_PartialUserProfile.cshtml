@model FashionStore.Entity.Entities.CustomerPicture
<div class="user-profile">
    <div class="dropdown user-pro-body">
        @if (@Model.Picture.PicturePath!=null)
        {
            <div><img id="profilephoto" src="/Uploads/@Model.Picture.PicturePath" alt="user-img" class="img-circle"></div>
        }
        else
        {
            <div><img src="/Uploads/defaultprofil.jpg" alt="user-img" class="img-circle"></div>

        }
        <a href="#" class="dropdown-toggle u-dropdown" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@(Model.Customer.Name + " " + Model.Customer.Surname)<span class="caret"></span></a>
        <ul class="dropdown-menu animated flipInY">
            <li><a href="/Admin/Customer/ProfileEdit"><i class="ti-user"></i> Profil</a></li>
            <li><a href="/Admin/Account/MailBox/@Model.CustomerId"><i class="ti-email"></i> Gelen Kutusu</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/Admin/Account/Settings/@Model.CustomerId"><i class="ti-settings"></i> Hesap Ayarları</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/Admin/Account/Logout"><i class="fa fa-power-off"></i> Çıkış Yap</a></li>
        </ul>
    </div>
</div>
