@model List<FashionStore.Entity.Entities.ProductReview>
@section styles
{
    <link href="~/AdminTemplate/plugins/bower_components/footable/css/footable.core.css" rel="stylesheet">
    <link href="~/AdminTemplate/plugins/bower_components/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Yorum Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Ürün Yorumları Yönetimi</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="/Admin/Home">Dashboard</a></li>
                <li class="active">Ürün Yorumları Yönetimi</li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- .row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="white-box">
                <h2 class="box-title m-b-0">Ürün Yorumları Listesi</h2>
                @Html.Partial("_PartialValidationResult")
                <hr />
                <table id="demo-foo-addrow" class="table table-bordered table-hover toggle-circle" data-page-size="15">
                    <thead>
                        <tr>
                            <th  data-toggle="true">Yorum Başlık</th>
                            <th data-hide="phone, tablet" data-toggle="true">Kullanıcı</th>
                            <th data-hide="phone, tablet">Ürün</th>
                            <th data-hide="phone, tablet">Durum</th>
                            <th data-hide="phone, tablet">Yorum Puanı</th>
                            <th data-hide="phone, tablet">Yararlı/Yararsız Toplam</th>
                            <th data-sort-initial="descending" data-hide="phone, tablet">Oluşturulma Tarihi</th>
                            <th data-sort-ignore="true" class="min-width" style="text-align: center;">İşlem</th>
                        </tr>
                    </thead>
                    <div class="form-inline padding-bottom-15">
                        <div class="row">
                            <div class="col-sm-6 text-left m-b-20">
                                <div class="form-group">
                                    <input id="demo-input-search2" type="text" placeholder="Arama..." class="form-control" autocomplete="off">
                                </div>
                            </div>
                        </div>
                    </div>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td>@review.Title</td>
                                <td>@review.Customer.Name @review.Customer.Surname</td>
                                <td>@review.Product.Name</td>
                                @if (review.IsApproved)
                                {
                                    <td style="text-align: center"><span class="label label-table label-success">Onaylı</span></td>
                                }
                                else
                                {
                                    <td style="text-align: center"><span class="label label-table label-danger">Engelli</span></td>

                                }
                                <td>@review.Rating</td>
                                <td>@review.HelpfulYesTotal / @review.HelpfulNoTotal</td>
                                <td>@review.CreatedTime</td>
                                <td style="text-align: center;">
                                    <a href="/Admin/Product/ReviewDetail/@review.Id" class="btn btn-warning btn-rounded waves-effect waves-light btn-sm" type="button"><span class="btn-label"><i class="fa fa-info"></i></span>Detay</a>
                                    <a href="/Admin/Product/ReviewEdit/@review.Id" class="btn btn-primary btn-rounded waves-effect waves-light btn-sm" type="button"><span class="btn-label"><i class="fa fa-edit"></i></span>Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="8">
                                <div class="text-right">
                                    <ul class="pagination"></ul>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>


@section scripts
{
    <!-- Footable -->
    <script src="~/AdminTemplate/plugins/bower_components/footable/js/footable.all.min.js"></script>
    <script src="~/AdminTemplate/plugins/bower_components/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
    <!--FooTable init-->
    <script src="~/AdminTemplate/js/footable-init.js"></script>
}

