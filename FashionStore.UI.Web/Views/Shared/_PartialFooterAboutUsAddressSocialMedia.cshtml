@model FashionStore.Entity.Entities.Setting
<div class="col-md-3 col-sm-6 col-xs-12">
    <div class="widget">
        <h5 class="widget-title uppercase">Hakkımızda</h5>
        <p class="mb-0">@Model.MetaDescription</p>
    </div>
</div>
<div class="col-md-3 col-sm-6 col-xs-12">
    <div class="widget footer-get-in-touch">
        <h5 class="widget-title uppercase">İletişim</h5>
        <address class="footer-address"><span>Adres:</span> @Model.Address @Model.City/@Model.Town.</address>
        <p>Telefon: <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a></p>
        <p>Email: <a href="mailto:@ViewBag.Mail">@ViewBag.Mail</a></p>
        <div class="social-icons rounded mt-20">
            <a href="https://@Model.TwitterUrl"><i class="fa fa-twitter"></i></a>
            <a href="https://@Model.FacebookUrl"><i class="fa fa-facebook"></i></a>
            <a href="https://@Model.GoogleUrl"><i class="fa fa-google-plus"></i></a>
            <a href="https://@Model.InstagramUrl"><i class="fa fa-instagram"></i></a>
            <a href="https://@Model.PinterestUrl"><i class="fa fa-pinterest"></i></a>
        </div>
    </div>
</div> <!-- end stay in touch -->
